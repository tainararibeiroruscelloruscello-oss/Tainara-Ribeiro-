    <div class="muted">¬© <span id="year"></span> ‚Ä¢ Contato: contato@aguasolexample.com</div>
  </footer>  <script>
    // Dados de exemplo ‚Äî troque pelas suas imagens e textos
    const products = [
      {id:1,title:'Biqu√≠ni Lenny',price:129.90,category:'bikini',img:'https://images.unsplash.com/photo-1519677100203-a0e668c92439?auto=format&fit=crop&w=800&q=60',desc:'Conjunto de duas pe√ßas em tecido leve e modelagem anat√¥mica.'},
      {id:2,title:'Mai√¥ Tropical',price:179.00,category:'maio',img:'https://images.unsplash.com/photo-1503342452485-86c6a39b58aa?auto=format&fit=crop&w=800&q=60',desc:'Mai√¥ com bojo e prote√ß√£o UV.'},
      {id:3,title:'Sa√≠da de Praia',price:89.90,category:'acessorio',img:'https://images.unsplash.com/photo-1520975915421-6f8a4e6bc0d8?auto=format&fit=crop&w=800&q=60',desc:'Sa√≠da leve e fresca para usar sobre o biqu√≠ni.'},
      {id:4,title:'Biqu√≠ni Coral',price:139.50,category:'bikini',img:'https://images.unsplash.com/photo-1487412947147-5cebf100ffc2?auto=format&fit=crop&w=800&q=60',desc:'Cortininha com tiras regul√°veis.'},
      {id:5,title:'Chap√©u Palha',price:69.00,category:'acessorio',img:'https://images.unsplash.com/photo-1495121605193-b116b5b09f3a?auto=format&fit=crop&w=800&q=60',desc:'Chap√©u de palha com aba larga para prote√ß√£o solar.'}
    ];

    const state = {cart:{}};

    const grid = document.querySelector('.grid');
    const searchInput = document.getElementById('searchInput');
    const filterCategory = document.getElementById('filterCategory');
    const sortBy = document.getElementById('sortBy');
    const productModal = document.getElementById('productModal');
    const cartModal = document.getElementById('cartModal');
    const cartCount = document.getElementById('cartCount');

    function formatPrice(n){return n.toLocaleString('pt-BR',{style:'currency',currency:'BRL'});}    

    function renderProducts(list){
      grid.innerHTML='';
      list.forEach(p=>{
        const card = document.createElement('article');card.className='card';
        card.innerHTML = `
          <img src="${p.img}" alt="${p.title}">
          <div class="info">
            <div style="display:flex;justify-content:space-between;align-items:center">
              <strong>${p.title}</strong>
              <div class="price">${formatPrice(p.price)}</div>
            </div>
            <div class="muted">${p.desc}</div>
            <div class="tags"><span class="tag">${p.category}</span></div>
            <div style="margin-top:10px;display:flex;gap:8px">
              <button data-id="${p.id}" class="openProduct">Ver</button>
              <button data-id="${p.id}" class="quickAdd">+ Carrinho</button>
            </div>
          </div>
        `;
        grid.appendChild(card);
      })
    }

    function applyFilters(){
      const q = searchInput.value.toLowerCase().trim();
      let list = products.filter(p=>{
        return (filterCategory.value==='all' || p.category===filterCategory.value)
          && (p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q));
      });
      if(sortBy.value==='price-asc') list.sort((a,b)=>a.price-b.price);
      if(sortBy.value==='price-desc') list.sort((a,b)=>b.price-a.price);
      renderProducts(list);
    }

    // Delegation para bot√µes
    document.addEventListener('click', (e)=>{
      if(e.target.matches('.openProduct')){
        const id = +e.target.dataset.id; openProductModal(id);
      }
      if(e.target.matches('.quickAdd')){
        const id = +e.target.dataset.id; addToCart(id,1);
      }
      if(e.target.id==='closeModal' || e.target.id==='productModal'){
        productModal.style.display='none';
      }
      if(e.target.id==='openCart'){
        openCart();
      }
      if(e.target.id==='closeCart' || e.target.id==='cartModal'){
        cartModal.style.display='none';
      }
      if(e.target.id==='checkout'){
        alert('Simula√ß√£o: encaminhar para checkout');
      }
    });

    function openProductModal(id){
      const p = products.find(x=>x.id===id);
      if(!p) return;
      document.getElementById('modalImg').src = p.img;
      document.getElementById('modalTitle').textContent = p.title;
      document.getElementById('modalDesc').textContent = p.desc;
      document.getElementById('modalPrice').textContent = formatPrice(p.price);
      document.getElementById('modalQty').value = 1;
      productModal.style.display='flex';

      document.getElementById('addToCart').onclick = ()=>{
        const qty = parseInt(document.getElementById('modalQty').value)||1;
        addToCart(p.id,qty);
        productModal.style.display='none';
      }
    }

    function addToCart(id,qty){
      state.cart[id] = (state.cart[id]||0) + qty;
      updateCartUI();
    }

    function updateCartUI(){
      const keys = Object.keys(state.cart);
      const count = keys.reduce((s,k)=>s+state.cart[k],0);
      cartCount.textContent = count;

      // Preencher modal
      const container = document.getElementById('cartItems');
      container.innerHTML='';
      let total = 0;
      keys.forEach(k=>{
        const p = products.find(x=>x.id==k);
        const qty = state.cart[k];
        const line = document.createElement('div');
        line.style.display='flex';line.style.justifyContent='space-between';line.style.alignItems='center';line.style.marginBottom='8px';
        line.innerHTML = `<div style="display:flex;gap:10px;align-items:center"><img src="${p.img}" style="width:48px;height:48px;object-fit:cover;border-radius:6px"><div><div>${p.title}</div><div class='muted' style='font-size:13px'>${formatPrice(p.price)} x ${qty}</div></div></div><div><button data-id='${p.id}' class='removeItem'>Remover</button></div>`;
        container.appendChild(line);
        total += p.price * qty;
      });
      document.getElementById('cartTotal').textContent = formatPrice(total);

      // remover item
      container.querySelectorAll('.removeItem').forEach(btn=>{
        btn.onclick = ()=>{
          const id = +btn.dataset.id; delete state.cart[id]; updateCartUI();
        }
      });
    }

    // Eventos de input
    searchInput.addEventListener('input', applyFilters);
    filterCategory.addEventListener('change', applyFilters);
    sortBy.addEventListener('change', applyFilters);

    document.getElementById('shopAll').addEventListener('click', ()=>{window.location.href='#produtos'});
    document.getElementById('exploreBtn').addEventListener('click', ()=>{window.location.href='#produtos'});

    // Inicializa√ß√£o
    applyFilters();
    updateCartUI();
    document.getElementById('year').textContent = new Date().getFullYear();
  </script></body>
