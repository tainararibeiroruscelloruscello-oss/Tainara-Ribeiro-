3. JavaScript (script.js)
 document.addEventListener('DOMContentLoaded', () => {
    // Seleciona todos os links de navegação que apontam para seções internas
    const links = document.querySelectorAll('a[href^="#"]');

    links.forEach(link => {
        link.addEventListener('click', function (e) {
            // Previne o comportamento padrão do link (navegação instantânea)
            e.preventDefault();

            // Pega o destino (ID da seção)
            const targetId = this.getAttribute('href');
            
            // Encontra o elemento de destino
            const targetElement = document.querySelector(targetId);

            if (targetElement) {
                // Rola suavemente para a posição, compensando o header fixo
                const headerHeight = document.querySelector('.header').offsetHeight;
                const targetPosition = targetElement.offsetTop - headerHeight;

                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
            }
        });
    });
});
  



